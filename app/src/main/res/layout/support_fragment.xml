<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardUseCompatPadding="false"
            android:clipToPadding="false"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_field_semi_wide_fragment"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="5dp"
                        android:padding="2dp">

                        <EditText
                            android:id="@+id/txt_Message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/vazir"
                            android:textSize="14dp"
                            android:textColor="@color/colorTitle"
                            android:hint="@string/Please_take_action_to_speed_up_the_tender_process"
                            android:backgroundTint="@color/colorWhite"
                            app:backgroundTint="@color/colorWhite"
                            android:lines="4"/>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vazir"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:text="@string/Suggest_or_Criticize"
                        android:background="@color/colorWhite"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="18dp"/>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_Send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="3dp"
                    android:clipToPadding="false"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:clickable="true"
                    android:theme="@style/AppTheme.MyRipple">

                    <TextView
                        android:id="@+id/lbl_btn_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:fontFamily="@font/vazir"
                        android:textSize="14dp"
                        android:textColor="@color/colorWhite"
                        android:text="@string/Send"/>

                    <ProgressBar
                        android:id="@+id/progress_btn_send"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:theme="@style/ProgressBarTheme"
                        android:visibility="gone"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="4dp"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/recycler_loading"/>
                <include layout="@layout/recycler_loading"/>
                <include layout="@layout/recycler_loading"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </LinearLayout>

</RelativeLayout>