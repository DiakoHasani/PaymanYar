<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_compass"
    android:clickable="true"
    android:textDirection="rtl"
    android:layoutDirection="rtl">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_below="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="400px"
            android:layout_height="150px"
            android:visibility="gone">


            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:layout_width="400px"
                android:layout_height="150px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_buble_vertical"
                android:layout_gravity="center_vertical"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_marginTop="160px"
            android:layout_width="150px"
            android:layout_height="400px"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal|bottom" />

            <ImageView
                android:layout_width="150px"
                android:layout_height="400px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_buble_horizontal"
                android:layout_gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true">

            <ImageView
                android:src="@drawable/border_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/icircle"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/border_center_level"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>