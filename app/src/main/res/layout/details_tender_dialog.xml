<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:textDirection="rtl"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/TenderNotification"
            android:textColor="@color/colorTitle"
            android:fontFamily="@font/vazir"
            android:textSize="18dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorUnderline"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_above="@id/bottomBar"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/PaymanyarCode"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/lbl_PaymanyarCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:singleLine="true"
                    android:text="15555"
                    android:paddingRight="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/NationalEstimate"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/lbl_NationalEstimate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:singleLine="true"
                    android:text="تحقیقات جامع"
                    android:paddingRight="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/ReopeningDate"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/lbl_ReopeningDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:singleLine="true"
                    android:text="1399/02/11"
                    android:paddingRight="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/SendSuggestionsUp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/SendSuggestionsUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:singleLine="true"
                    android:text="1399/02/11"
                    android:paddingRight="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/GetDocumentsUp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/GetDocumentsUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:singleLine="true"
                    android:text="1399/02/11"
                    android:paddingRight="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/Place_of_Receipt_of_Documents"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/lbl_Place_of_Receipt_of_Documents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:singleLine="true"
                    android:text="شرکت آبفای استان کردستان"
                    android:paddingRight="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/TenderDevice"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/lbl_TenderDevice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:singleLine="true"
                    android:text="شرکت پژمان رایانه"
                    android:paddingRight="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/website"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/lbl_website"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:singleLine="true"
                    android:text="www.itrdsgnbg.com"
                    android:paddingRight="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorGray"
                    android:singleLine="true"
                    android:text="@string/Description"
                    android:paddingRight="16dp"/>

                <TextView
                    android:id="@+id/lbl_Description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/vazir"
                    android:textColor="@color/colorTitle"
                    android:text="توضیحات الزامی است توضیحات الزامی است"
                    android:paddingRight="1dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/btn_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_refresh"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:visibility="invisible"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loading_details_tender"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorUnderline"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_Analize"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_marginRight="16dp"
                    app:cardCornerRadius="4dp"
                    android:clipToPadding="false"
                    app:cardUseCompatPadding="false"
                    android:clickable="true"
                    android:theme="@style/AppTheme.MyRipple"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/vazir"
                        android:gravity="center"
                        android:text="@string/Analize"
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"/>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_Share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_icons_details_dialog"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_margin="1dp"
                        app:cardUseCompatPadding="false"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share"
                            android:padding="2dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_Star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_icons_details_dialog"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        app:cardUseCompatPadding="false"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_black"
                            android:padding="2dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_Right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_icons_details_dialog"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        app:cardUseCompatPadding="false"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_right"
                            android:padding="2dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_Left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_icons_details_dialog"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        app:cardUseCompatPadding="false"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_left"
                            android:padding="2dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>